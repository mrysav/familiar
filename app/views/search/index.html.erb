<div class="col-md-8 offset-2">
    <br>
    <form role="form" action="<%= search_path %>" method="get">
        <h2><%= label_tag :s, "familiar." %></h2>
        <div class="input-group">
            <%= text_field_tag :s, params[:s], class: 'form-control', placeholder: "search people, stories, photos..." %>
            <div class="input-group-append">
                <%= submit_tag "Search!", :name => nil, :class => "btn btn-primary" %>
            </div>
        </div>
    </form>

</div>

<% if params[:s] != nil && params[:s] != '' %>
<div class="col-md-12">
    <% if @results.count > 0 %>
    
    <hr>

    <% @results.each do |pg_search_document| %>
    <%= render pg_search_document.searchable %>
    <% end %>

    <div class="text-center col-md-12">
        <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
    </div>
    
    <% else %>
    
    <div class="text-center"><h2>Nothing turned up!</h2></div>
    
    <% end %>
</div>
<% end %>